/* utils */
white(a)
  rgba(255, 255, 255, a)

black(a)
  rgba(0, 0, 0, a)

/* 更鲜活的彩带，轻微提升色度 */
rainbow-light = linear-gradient(
  to right,
  oklch(0.86 0.16 0),
  oklch(0.86 0.16 40),
  oklch(0.86 0.16 80),
  oklch(0.86 0.16 120),
  oklch(0.86 0.16 160),
  oklch(0.86 0.16 200),
  oklch(0.86 0.16 240),
  oklch(0.86 0.16 280),
  oklch(0.86 0.16 320),
  oklch(0.86 0.16 360)
)
rainbow-dark = linear-gradient(
  to right,
  oklch(0.74 0.14 0),
  oklch(0.74 0.14 40),
  oklch(0.74 0.14 80),
  oklch(0.74 0.14 120),
  oklch(0.74 0.14 160),
  oklch(0.74 0.14 200),
  oklch(0.74 0.14 240),
  oklch(0.74 0.14 280),
  oklch(0.74 0.14 320),
  oklch(0.74 0.14 360)
)

:root
  --radius-large 0.5rem
  --content-delay 150ms

/* An util to define variables that vary with light and dark mode */
define(vars)
  :root
    for key, value in vars
      {key}: value[0]
  :root.dark
    for key, value in vars
      if length(value) > 1
        {key}: value[1]

